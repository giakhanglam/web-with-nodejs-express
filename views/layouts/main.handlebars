<!DOCTYPE html>
<html>
<head>
	<title>Meadowlark Travel</title>
	<!-- include the test framework in all page -->
	{{#if showTests}}
		<link rel="stylesheet" href="/vendor/mocha.css">
	{{/if}}
	<!-- link in jQuery: use as primary DOM manipulation library for the site
	 and make test assertions-->
	<script src="//code.jquery.com/jquery-2.0.2.min.js"></script>
</head>
<body>
	<div class="container">
		<header><h1>Meadowlark Travel</h1></header>
		<img src="/img/logo.jpg" alt="Meadowlark Travel Logo">
		{{{body}}}
		<footer>&copy; {{copyrightYear}} Meadowlark Travel</footer>
	</div>

	{{#if showTests}}
		<div id="mocha"></div>
		<script src="/vendor/mocha.js"></script>
		<script src="/vendor/chai.js"></script>
		<script>
			mocha.ui('tdd');
			var assert = chai.assert;
		</script>
		<script src="/qa/tests-global.js"></script>
		{{#if pageTestScript}}
			<script src="{{pageTestScript}}"></script>
		{{/if}}
		<script>mocha.run();</script>
	{{/if}}
</body>
</html>
